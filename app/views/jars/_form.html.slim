= form_for jar do |f|
  - if jar.errors.any?
    .alert-box data-alert=true class="alert"
      = jar.errors.full_messages.join(',')
      a.close href="#" &times;

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :guest_ids
    = f.select :guest_ids, User.all.collect { |x| [x.email, x.id] }, { }, multiple: true, class: 'jar-guests'

  .field
    = f.label :end_date
    = f.date_field :end_date

  .field
    = f.label :end_date
    = f.time_field :end_date, ignore_date: true

  .actions = f.submit 'Save', class: 'button'
