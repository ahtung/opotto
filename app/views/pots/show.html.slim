- set_meta_tags site: 'opotto', title: @pot.name, og: { title: @pot.name, type: 'product' }

.ui.two.column.grid
  .six.wide.column
    h3 End date
    .ui.two.column.grid
      .eight.wide.column
        span 23
      .eight.wide.column
        span Sep
        span 2016
  .ten.wide.column
    .ui.two.column.grid
      .eight.wide.column
      .eight.wide.column
        h3 To
      .eight.wide.column
        = image_tag @pot.receiver.avatar.url(:thumb), class: 'ui avatar image'
