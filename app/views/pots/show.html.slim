.ui.two.column.grid
  .eight.wide.column
    = link_to new_pot_contribution_path(@pot), class: 'btn' do
      i.icon-flight
      = t('pot.contribute')
  .eight.wide.column
    = link_to edit_pot_path(@pot), class: 'btn' do
      i.icon-flight
      = t('pot.edit')
.ui.text.container
  h3 Total money collected
  p= humanized_money_with_symbol(@pot.total_contribution)
.ui.container
  .relaxed.list
    - @pot.contributions.with_state(:scheduled, :completed).each do |contribution|
      .item
        .ui.two.column.grid
          .four.wide.column
            = image_tag contribution.user.avatar.url(:thumb), class: 'ui avatar image'
          .eight.wide.column
            = contribution.owner_name
          .four.wide.column
            = humanized_money_with_symbol(contribution.amount)

  
  

